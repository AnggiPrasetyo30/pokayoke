<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="160dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@drawable/bg_locked"
    tools:context=".activity.notif_good">

    <ImageView
        android:id="@+id/icgood"
        android:layout_width="62dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="69dp"
        android:src="@drawable/locked_padlock" />

    <TextView
        android:id="@+id/txtgood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perangkat Terkunci"
        android:layout_below="@+id/icgood"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtgood"
        android:layout_alignStart="@+id/txtgood"
        android:layout_alignEnd="@+id/txtgood"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="@color/black"
        android:text="UNLOCK"
        android:textColor="@color/white" />

</RelativeLayout>